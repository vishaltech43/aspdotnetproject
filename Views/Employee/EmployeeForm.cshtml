@model EmployeeManagement.Models.Employee

@{
    ViewBag.Title = "Add Form";
}

<h4 class="p-3">Add New Employee...</h4>
<form method="post">
    <div>
        <div class="form-group col-md-5 col-12">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-md-5 col-12">
            <label asp-for="EmployeeId"></label>
            <input asp-for="EmployeeId" class="form-control" type="number" min="1" />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>

        <div class="form-group col-md-5 col-12">
            <label asp-for="JobTitle"></label>
            <select asp-for="JobTitle" class="form-control">
                <option value="">Select Job Title</option>
                <option value="Mern stack">Mern stack</option>
                <option value="ai">AI</option>
                <option value="DotNet">DotNet</option>
            </select>
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>

        <div class="form-group col-md-5 col-12">
            <label asp-for="EmployeeType"></label>
            <div>
                <div class="form-check">
                    <input asp-for="EmployeeType" value="Part Time" class="form-check-input" type="radio" id="partTime" />
                    <label class="form-check-label" for="partTime">Part Time</label>
                </div>
                <div class="form-check">
                    <input asp-for="EmployeeType" value="Full Time" class="form-check-input" type="radio" id="fullTime" />
                    <label class="form-check-label" for="fullTime">Full Time</label>
                </div>
            </div>
            <span asp-validation-for="EmployeeType" class="text-danger"></span>
        </div>

        <div class="form-group col-md-5 col-12">
            <label asp-for="DateOfJoining" class="control-label"></label>
            <input asp-for="DateOfJoining" type="date" class="form-control" />
            <span asp-validation-for="DateOfJoining" class="text-danger"></span>
        </div>

        <div class="form-group col-md-5 col-12">
            <label asp-for="Salary"></label>
            <input asp-for="Salary" class="form-control" type="number" min="0"  />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-4">Submit</button>
    </div>
</form>

<p>
    <a asp-action="EmployeeList" class="btn btn-secondary mt-3">Back To Employee List</a>
</p>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
